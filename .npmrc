# NPM Configuration for better caching and faster installs
cache=/tmp/npm-cache
prefer-offline=true
audit=false
fund=false
package-lock=true
save-exact=true

# Registry settings
registry=https://registry.npmjs.org/

# Performance optimizations
maxsockets=50
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
