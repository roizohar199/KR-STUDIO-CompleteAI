# OpenAI API Key
# החלף את your_api_key_here עם ה-API Key האמיתי שלך מ-OpenAI
VITE_OPENAI_API_KEY=your_api_key_here

# Frontend API Base URL (Vite)
# אם אתה משתמש ב-Reverse Proxy תחת אותו דומיין, אפשר להשאיר ריק או לשים /api
# לדוגמה:
# VITE_API_BASE_URL=/api
# או אם אין proxy:
# VITE_API_BASE_URL=https://kr-studio-completeai.onrender.com/api

# הערה: 
# 1. העתק את הקובץ הזה ל-.env
# 2. החלף את your_api_key_here עם ה-API Key האמיתי שלך
# 3. קבל API Key מ: https://platform.openai.com/api-keys

# Worker Configuration
# אם ה-Worker רץ על שרת נפרד, הגדר את הכתובת החיצונית
# Render.com Configuration
RENDER_APP_NAME=kr-studio-completeai
RENDER_SERVICE_ID=your_service_id_here

# Database (Render.com provides MongoDB automatically)
MONGODB_URI=your_mongodb_uri_here

# File Storage (Render.com provides persistent disk)
UPLOAD_DIR=uploads
SEPARATED_DIR=separated

# Worker URL (אם ה-Worker רץ על Render.com)
WORKER_URL=https://kr-studio-completeai.onrender.com/api/worker

# אם ה-Worker רץ על אותו שרת, הגדר את הפורט
WORKER_PORT=10001

# Server Configuration
PORT=10000 